<div id="<%= dom_id product %>">
  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= product.description %>
  </p>

  <p>
    <strong>Amount:</strong>
    <%= formatted_amount product.amount %>
  </p>

</div>

<%= link_to "Purchase", product_purchase_path(product) %>
